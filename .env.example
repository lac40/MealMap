# Database Configuration
DB_HOST=mssql
DB_PORT=1433
DB_NAME=mealmap
DB_USER=admin
DB_PASSWORD=your-strong-password-here

# JWT Configuration (MUST be valid base64-encoded string)
# Generate new secret: [Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(64))
JWT_SECRET=your-base64-encoded-jwt-secret-here

# Email Configuration (for password reset and notifications)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@mealmap.app

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# Frontend API URL (for development)
VITE_API_BASE_URL=http://localhost:8080/v1
